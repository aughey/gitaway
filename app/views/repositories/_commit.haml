.commit
  %table
    %tr
      %td.info
        .message= commit.message
        .author= commit.author
        .date= commit.authored_date
      %td.git
        %ul
          %li== commit #{link_to(commit.id[0,20],"/repositories/#{@r.id}/commit/#{commit.id}")}
          %li== tree #{link_to(commit.tree.id[0,20],"/repositories/#{@r.id}/tree/#{commit.tree.id}")}
          - for p in commit.parents
            %li== parent #{link_to(p.id[0,20],"/repositories/#{@r.id}/tree/#{p.id}")}

