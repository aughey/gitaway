%html{:xmlns => "http://www.w3.org/1999/xhtml", :lang => "en"}
  %head
    %title Gitaway
    = stylesheet_link_tag "reset","app","formtastic","formtastic_changes"
    -# javascript_include_tag :defaults
    = csrf_meta_tag


  %body
    #titlebar
      %h1 GitAway - Your personal hub for git
    #content{:class => @contentclass || "content"}
      - if current_user
        .logininfo== You are logged in as #{l current_user} (UserID: #{current_user.id})
        %p= link_to("Manage ssh keys",ssh_keys_path)
      =yield
